    <p style="margin-top: 20px"><input type="submit" value="Search" /></p>

</form>

<style>
    * {
        box-sizing: border-box;
    }

    .column {
        float: left;
        width: 170px;
        padding: 5px;
    }

    .row::after {
        content: "";
        clear: both;
        display: table;
    }
</style>

@model List<Rootobject>

@if (Model != null)
{
    for (int i = 0; i < Model.Count; i++)
    {
        for (int j = 0; j < Model[i].results.Length; j++){
            <div class="row" style="margin-bottom:25px">
                <div class="column" style="float:left">
                     <img src=@Model[i].results[j].primaryImage.url style="width:125px; height: auto" />
                </div>
                <div class="column">
                    <p>Title: @Model[i].results[j].titleText.text</p>
                    <p>Release Year: @Model[i].results[j].releaseYear.year</p>
                </div>
            </div>
        }
    }

}